Screen:
    MDBoxLayout:
        orientation:'vertical'
        adaptive_height:True
        pos_hint:{'top':1}
        padding:dp(50)
        spacing:dp(30)
        MDBoxLayout:
            adaptive_height:True
            MDLabel:
                text:'LE VALET DRY CLEANERS'
                bold:True
                italic:True
                color:(102,0,204,1)
                halign:'left'
                size_hint_y:None
                height:self.texture_size[1]
            MDLabel:
                text:'New Customer List'
                bold:True
                color:(0,0,0,1)
                halign:'right'
                size_hint_y:None
                height:self.texture_size[1]
        MDBoxLayout:
            adaptive_height:True
            spacing:20
            MDBoxLayout:
                adaptive_height:True
                spacing:dp(15)
                Label:
                    text:'17/10/2020'
                    halign:'left'
                    color:(0,0,0,1)
                    size_hint:None,None
                    size:self.texture_size
                Label:
                    text:'to'
                    bold:True
                    color:(0,0,0,1)
                    size_hint:None,None
                    size:self.texture_size
                Label:
                    text:'18/10/2020'
                    color:(0,0,0,1)
                    size_hint:None,None
                    size:self.texture_size
            Label:
                text:'printed:'
                italic:True
                color:(0,0,0,1)
                size_hint:None,None
                size:self.texture_size

            Label:
                text:'Sunday, 17 October, 2010'
                italic:True
                color:(0,0,1,1)
                size_hint:None,None
                size:self.texture_size
                halign:'right'
        MDSeparator:
            color:(0,0,0,1)
            height:dp(3)
            valign:'bottom'
        MDBoxLayout:
            adaptive_height:True
            spacing:dp(15)
            Label:
                text:'ID'
                italic:True
                color:(0,102,0,1)
                size_hint_y:None
                height:self.texture_size[1]
                halign:'center'
            Label:
                text:'FirstName'
                italic:True
                color:(0,102,0,1)
                size_hint_y:None
                height:self.texture_size[1]
                halign:'center'
            Label:
                text:'LastName'
                italic:True
                color:(0,102,0,1)
                size_hint_y:None
                height:self.texture_size[1]
                halign:'center'
            Label:
                text:'Address'
                italic:True
                color:(0,102,0,1)
                size_hint_y:None
                height:self.texture_size[1]
                halign:'center'
            Label:
                text:'PostCode'
                italic:True
                color:(0,102,0,1)
                size_hint_y:None
                height:self.texture_size[1]
                halign:'center'
            Label:
                text:'Mobile'
                italic:True
                color:(0,102,0,1)
                size_hint_y:None
                height:self.texture_size[1]
                halign:'center'
        MDSeparator:
            color:(0,0,0,1)
            height:dp(3)
            valign:'top'
